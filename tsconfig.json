{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "exclude": ["node_modules", "dist"]
}
